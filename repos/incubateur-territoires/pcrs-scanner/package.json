{
  "name": "pcrs-scanner",
  "version": "0.0.0",
  "repository": "https://github.com/openpcrs/pcrs-scanner",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "lint": "xo",
    "test": "ava",
    "start": "node server.js",
    "worker": "node worker.js",
    "debug:list-http": "node scripts/list-http.js",
    "debug:list-ftp": "node scripts/list-ftp.js",
    "debug:list-sftp": "node scripts/list-sftp.js",
    "postinstall": "./gdal_install.sh"
  },
  "dependencies": {
    "basic-ftp": "^5.0.4",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "gdal-async": "^3.10.1",
    "got": "^13.0.0",
    "hash-obj": "^4.0.0",
    "http-errors": "^2.0.0",
    "lodash-es": "^4.17.21",
    "minimist": "^1.2.8",
    "mongodb": "^6.1.0",
    "morgan": "^1.10.0",
    "p-limit": "^4.0.0",
    "p-map": "^6.0.0",
    "ssh2-sftp-client": "^9.1.0"
  },
  "devDependencies": {
    "ava": "^5.3.1",
    "xo": "^0.56.0"
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "rules": {
      "comma-dangle": [
        "error",
        "never"
      ],
      "unicorn/prevent-abbreviations": "off",
      "import/no-unassigned-import": "off",
      "import/order": "off"
    }
  },
  "engines": {
    "node": ">= 20.9 < 21"
  }
}
