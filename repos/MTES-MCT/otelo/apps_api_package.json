{
  "name": "@otelo/api",
  "version": "1.0.0",
  "description": "Backend for the Otelo Startup",
  "author": "KGALLET",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": "24"
  },
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch --exec \"node -r tsconfig-paths/register\"",
    "start": "node dist/main",
    "start:dev": "nest start --watch --exec \"node -r tsconfig-paths/register\"",
    "start:debug": "nest start --debug --watch --exec \"node -r tsconfig-paths/register\"",
    "start:prod": "node dist/main",
    "cli": "ts-node -r tsconfig-paths/register src/cli/cli.ts",
    "lint": "biome check src",
    "lint:format": "biome check src --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "postinstall": "[ \"$BUILD_TARGET\" = \"@otelo/api\" ] && prisma generate || true",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@golevelup/ts-jest": "^0.7.0",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^11.2.3",
    "@prisma/adapter-pg": "^6.19.0",
    "@prisma/client": "^6.19.0",
    "@shared": "workspace:*",
    "@types/papaparse": "^5.5.1",
    "argon2": "^0.44.0",
    "commander": "^14.0.2",
    "dayjs": "catalog:",
    "exceljs": "^4.4.0",
    "jszip": "^3.10.1",
    "papaparse": "^5.5.3",
    "puppeteer": "^24.32.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.9",
    "@types/commander": "^2.12.5",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "catalog:",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "prisma": "^6.19.0",
    "prisma-json-types-generator": "^3.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "catalog:"
  }
}
