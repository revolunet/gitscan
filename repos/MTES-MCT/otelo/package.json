{
  "name": "otelo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264",
  "engines": {
    "node": "24"
  },
  "scripts": {
    "scalingo-prebuild": "corepack enable",
    "build": "pnpm --filter @shared build && pnpm --filter ${BUILD_TARGET} build",
    "build:shared": "pnpm --filter @shared build",
    "build:api": "pnpm --filter @otelo/api build",
    "build:web": "pnpm --filter @otelo/web build",
    "lint": "biome check .",
    "lint:fix": "biome check . --fix",
    "clean": "rm -rf apps/*/node_modules apps/*/.next apps/*/dist packages/*/node_modules packages/*/dist node_modules",
    "scalingo-postbuild": "node scripts/scalingo-postbuild.mjs"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  }
}
