{
  "name": "back",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc --build && nest build",
    "start": "node dist/mainServer.js & node dist/mainWorker.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "concurrently \"npm run start:server:dev\" \"npm run start:worker:dev\"",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:server:dev": "nodemon --config nodemon-server.json",
    "start:worker:dev": "nodemon --config nodemon-worker.json",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "clean": "rm -rf dist node_modules",
    "test": "jest && npm run test:e2e",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e:api-worker": "jest --config ./test/jest-e2e-api-worker.json --runInBand",
    "migrate:run": "typeorm-ts-node-commonjs migration:run -d ./src/infra/database/migrationDatasource.ts",
    "migrate:generate": "typeorm-ts-node-commonjs migration:generate -d ./src/infra/database/migrationDatasource.ts",
    "migrate:create": "typeorm migration:create"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.931.0",
    "@getbrevo/brevo": "^3.0.1",
    "@lib/dossier": "*",
    "@lib/parser": "*",
    "@lib/shared": "*",
    "@nestjs/cache-manager": "^3.1.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/serve-static": "^5.0.4",
    "@nestjs/throttler": "^6.5.0",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.13.2",
    "cache-manager": "^7.2.8",
    "cookie-parser": "^1.4.7",
    "form-data": "^4.0.4",
    "nestjs-cls": "^6.2.0",
    "nodemailer": "^7.0.12",
    "openid-client": "^6.8.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "pg-boss": "^12.1.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "ssh2-sftp-client": "^12.0.1",
    "typeorm": "^0.3.27",
    "ulid": "^3.0.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@testcontainers/postgresql": "^11.9.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.7",
    "@types/nodemailer": "^7.0.4",
    "@types/pdfkit": "^0.17.4",
    "@types/ssh2-sftp-client": "^9.0.6",
    "@types/supertest": "^6.0.2",
    "arch-unit-ts": "^1.0.9",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "testcontainers": "^11.9.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript-eslint": "^8.52.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@queue/(.*)$": "<rootDir>/infra/queue/$1",
      "^@database/(.*)$": "<rootDir>/infra/database/$1",
      "^@shared/(.*)$": "<rootDir>/shared/$1",
      "^@worker/(.*)$": "<rootDir>/worker/$1",
      "^@depot/(.*)$": "<rootDir>/depot/$1",
      "^@s3/(.*)$": "<rootDir>/infra/s3/$1",
      "^@dossier/(.*)$": "<rootDir>/dossier/$1",
      "^@referentiel/(.*)$": "<rootDir>/referentiel/$1",
      "^@notification/(.*)$": "<rootDir>/notification/$1",
      "^@infra/(.*)$": "<rootDir>/infra/$1",
      "^@masa/(.*)$": "<rootDir>/masa/$1",
      "^@user/(.*)$": "<rootDir>/user/$1",
      "^@authentication/(.*)$": "<rootDir>/authentication/$1",
      "^@lib/dossier$": "<rootDir>/../../../packages/dossier/src/index.ts",
      "^@lib/parser$": "<rootDir>/../../../packages/parser/src/index.ts"
    },
    "coveragePathIgnorePatterns": [
      "/dist/",
      "/infra/",
      "/referentiel/",
      "/notification/",
      ".*\\.module\\.ts",
      ".*\\.mock\\.ts",
      ".*\\.factory\\.ts",
      ".*\\.entity\\.ts"
    ]
  }
}
