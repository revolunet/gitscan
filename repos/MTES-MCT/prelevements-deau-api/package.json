    "run-job-with-logs": "node scripts/run-job-with-logs.js",
    "user:create": "node scripts/create-user.js",
    "user:add-role": "node scripts/add-user-role.js",
    "user:remove-role": "node scripts/remove-user-role.js",
    "user:list": "node scripts/list-users.js",
    "lint": "xo",
    "lint:openapi": "spectral lint docs/openapi.yaml",
    "test": "ava",
    "coverage": "c8 ava",
    "coverage:report": "c8 --reporter=html --reporter=text ava"
