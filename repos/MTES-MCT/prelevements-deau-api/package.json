    "@bull-board/ui": "^6.14.2",
    "@etalab/decoupage-administratif": "^5.2.0",
    "@fabnum/demarches-simplifiees": "workspace:*",
    "@fabnum/prelevements-deau-timeseries-parsers": "workspace:*",
    "@sentry/node": "^10.38.0",
    "@sentry/profiling-node": "^10.38.0",
    "bullmq": "^5.63.1",
    "content-disposition": "^0.5.4",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "hash-object": "^5.0.1",
    "http-errors": "^2.0.0",
    "ioredis": "^5.8.1",
    "joi": "^18.0.1",
    "lodash-es": "^4.17.21",
    "mjml": "^4.18.0",
    "mongodb": "~6.16.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.11",
    "papaparse": "^5.5.3",
    "proj4": "^2.20.0",
    "wkx": "^0.5.0"
  },
  "devDependencies": {
    "@stoplight/spectral-cli": "^6.11.0",
    "ava": "^6.4.1",
    "baseline-browser-mapping": "^2.9.19",
    "c8": "^10.1.3",
    "mongodb-memory-server": "^10.3.0",
    "supertest": "^7.1.4",
    "xo": "^1.2.3"
  },
  "c8": {
    "all": true,
    "include": [
      "lib/**/*.js",
      "packages/**/*.js"
    ],
    "exclude": [
      "**/migrations/**",
      "**/scripts/**",
      "**/data/**",
      "packages/**/docs/**",
      "**/__tests__/**",
      "lib/util/test-helpers/**"
    ]
  },
  "engines": {
    "node": ">= 24 < 25"
  }
}
