{
  "name": "Maestro",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/betagouv/maestro.git"
  },
  "workspaces": [
    "shared",
    "server",
    "frontend"
  ],
  "license": "AGPL-3.0",
  "engines": {
    "node": "24"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "start-local": "run-p server-local frontend-local",
    "server-local": "npm run dev -w server",
    "frontend-local": "npm run dev -w frontend",
    "start": "npm run start -w server",
    "scalingo-postbuild": "npm run --workspaces --if-present scalingo-postbuild",
    "lint": "npm run lint --workspaces",
    "knip": "knip"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.21",
    "@types/ssh2-sftp-client": "^9.0.6",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "knip": "^5.83.1",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.4.0",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "lodash-es": "^4.17.23",
    "tsafe": "^1.8.12",
    "uuid": "^11.0.5",
    "zod": "^4.3.5"
  },
  "release": {
    "branches": [
      "prod",
      {
        "name": "prod",
        "prerelease": false
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "semantic-release-mattermost"
    ]
  }
}
