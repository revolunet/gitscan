{
    "name": "api",
    "version": "1.0.0",
    "description": "",
    "main": "src/index.js",
    "scripts": {
        "build": "npm run prisma:generate && npx tsc --build --clean && npx tsc -p tsconfig.build.json",
        "dev": "nodemon",
        "start": "npm run build && node dist/index.js",
        "prisma:migrate:core": "prisma migrate dev --schema ./prisma/core/schema.core.prisma",
        "prisma:migrate:analytics": "prisma migrate dev --schema ./prisma/analytics/schema.analytics.prisma",
        "prisma:migrate:deploy": "prisma migrate deploy --schema ./prisma/core/schema.core.prisma && prisma migrate deploy --schema ./prisma/analytics/schema.analytics.prisma",
        "prisma:generate": "prisma generate --schema ./prisma/core/schema.core.prisma && prisma generate --schema ./prisma/analytics/schema.analytics.prisma",
        "prettier": "prettier --write . --plugin=prettier-plugin-organize-imports",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "test": "npm run test:unit && npm run test:integration",
        "test:unit": "vitest run --config vitest.unit.config.ts",
        "test:unit:watch": "vitest --config vitest.unit.config.ts",
        "test:integration": "vitest run --config vitest.integration.config.ts",
        "test:integration:watch": "vitest --config vitest.integration.config.ts",
        "test:watch": "npm run test:unit:watch",
        "test:ci": "npm run prisma:generate && npm run test:unit && npm run test:integration",
        "job": "ts-node src/jobs/run-job.ts"
    },
    "dependencies": {
        "@prisma/client": "6.19.0",
        "@sentry/node": "10.33.0",
        "@types/geoip-lite": "1.4.4",
        "aws-sdk": "2.1693.0",
        "bcryptjs": "3.0.2",
        "cookie-parser": "1.4.7",
        "cors": "2.8.5",
        "csv-parse": "6.1.0",
        "dotenv": "17.2.3",
        "express": "4.21.0",
        "express-rate-limit": "8.2.1",
        "fast-xml-parser": "5.3.3",
        "geoip-lite": "1.4.10",
        "he": "1.2.0",
        "helmet": "8.1.0",
        "html-to-text": "9.0.5",
        "isbot": "5.1.32",
        "jsonwebtoken": "9.0.3",
        "jspdf": "3.0.3",
        "mongoose": "7.8.8",
        "morgan": "1.10.1",
        "multer": "2.0.2",
        "node-cron": "4.2.1",
        "object-hash": "3.0.0",
        "passport": "0.7.0",
        "passport-headerapikey": "1.2.2",
        "passport-jwt": "4.0.1",
        "prisma": "6.19.0",
        "sharp": "0.34.5",
        "uuid": "11.1.0",
        "xlsx": "0.18.5",
        "zod": "4.3.5"
    },
    "devDependencies": {
        "@eslint/js": "9.39.2",
        "@testcontainers/postgresql": "11.11.0",
