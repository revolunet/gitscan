{
  "name": "deployment-tests-dev-env",
  "version": "1.0.0",
  "description": "Deployment tests on a Grist instance. Checks only few basic scenarios.",
  "type": "module",
  "scripts": {
    "test": "./test.sh",
    "test:api": "mocha ./test/api/**/*.spec.js",
    "test:e2e": "wdio run ./wdio.conf.js",
    "test:e2e:ci": "wdio run ./wdio.ci.conf.js",
    "format": "biome format --fix ./test/",
    "lint": "biome lint --fix ./test/",
    "check": "biome check --fix ./test",
    "ci": "biome ci ./test"
  },
  "author": "fflorent",
  "license": "Apache-2.0",
  "dependencies": {
    "@wdio/cli": "^9.20.0",
    "axios": "^1.13.1",
    "chai": "^6.2.0",
    "mocha": "^11.7.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@testing-library/webdriverio": "^3.2.1",
    "@wdio/firefox-profile-service": "^9.20.0",
    "@wdio/local-runner": "^9.20.0",
    "@wdio/mocha-framework": "^9.20.0",
    "@wdio/spec-reporter": "^9.20.0",
    "wdio-wait-for": "^3.1.0"
  }
}
