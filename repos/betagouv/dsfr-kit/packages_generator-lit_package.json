{
  "name": "@dsfr-kit/generator-lit",
  "version": "0.0.1",
  "description": "Lit generator plugin for DSFR Kit",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "lint": "biome lint .",
    "format": "biome format ."
  },
  "dependencies": {
    "@dsfr-kit/generator-core": "workspace:*",
    "node-html-parser": "^7.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^20.19.27",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
