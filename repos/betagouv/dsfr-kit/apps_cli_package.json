{
  "name": "@dsfr-kit/cli",
  "version": "0.0.1",
  "description": "CLI for generating DSFR lit components",
  "type": "module",
  "bin": {
    "dsfr-kit": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsup src/index.ts --format esm --watch --onSuccess 'node dist/index.js'",
    "build": "tsup src/index.ts --format esm --clean",
    "start": "node dist/index.js",
    "lint": "biome lint .",
    "format": "biome format ."
  },
  "dependencies": {
    "@dsfr-kit/generator-core": "workspace:^",
    "@dsfr-kit/generator-lit": "workspace:^",
    "commander": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^20.11.24",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  }
}
