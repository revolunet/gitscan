{
  "name": "fonds-prevention-argile",
  "version": "1.8.2",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "build": "next build",
    "start": "next start",
    "start:dev": "next dev",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "validate": "pnpm typecheck && pnpm lint && pnpm test && pnpm precommit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "mailhog:start": "docker-compose up -d mailhog",
    "db:start": "docker-compose up -d postgres",
    "db:stop": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres",
    "db:push": "pnpm drizzle-kit push",
    "db:push:force": "pnpm drizzle-kit push --force",
    "db:migrate": "tsx src/shared/database/migrate.ts",
    "db:studio": "pnpm drizzle-kit studio",
    "db:generate": "pnpm drizzle-kit generate",
    "db:setup": "pnpm db:push && pnpm db:seed",
    "db:reset:full": "pnpm db:reset && sleep 5 && pnpm db:setup",
    "clean": "rm -rf .next && pnpm start:dev",
    "fresh": "rm -rf .next node_modules pnpm-lock.yaml && pnpm install && pnpm start:dev",
    "prepare": "husky",
    "precommit": "talisman --githook pre-commit",
    "talisman:check": "talisman --scan",
    "seo:generate": "tsx src/features/seo/scripts/generate-seo-data.ts",
    "seo:import-catnat": "tsx src/features/seo/catnat/scripts/import-catnat.ts",
    "fix:epci": "tsx scripts/fix-missing-epci/fix-missing-epci.ts"
  },
  "dependencies": {
    "@getbrevo/brevo": "3.0.1",
    "@gouvfr/dsfr": "1.14.2",
    "@gouvfr/dsfr-chart": "2.0.4",
    "@react-email/components": "0.5.7",
    "@react-email/render": "1.4.0",
    "@sentry/nextjs": "9.46.0",
    "@socialgouv/matomo-next": "1.10.0",
    "@types/pg": "8.15.6",
    "argon2": "0.44.0",
    "dotenv": "17.2.3",
    "drizzle-orm": "0.44.7",
    "exceljs": "~4.4.0",
    "maplibre-gl": "5.1.1",
    "next": "15.5.10",
    "nodemailer": "7.0.11",
    "pmtiles": "4.3.0",
    "postgres": "3.4.7",
    "prettier": "3.5.3",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "zod": "3.25.20",
    "zustand": "5.0.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.1.16",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.2.0",
    "@testing-library/user-event": "14.6.1",
    "@types/exceljs": "~1.3.2",
    "@types/node": "22.13.5",
    "@types/nodemailer": "7.0.3",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react": "5.1.0",
    "@vitest/ui": "3.2.4",
    "drizzle-kit": "0.31.7",
    "eslint": "9.39.0",
    "eslint-config-next": "15.5.6",
    "husky": "9.1.7",
    "jsdom": "26.1.0",
    "postcss": "8.5.3",
    "tailwindcss": "4.1.16",
    "ts-node": "10.9.2",
    "vitest": "3.2.4"
  }
}
