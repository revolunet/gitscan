{
  "name": "@incubateur-ademe/nosgestesclimat-scripts",
  "version": "0.8.0",
  "description": "Set of common code used both in the website and the model repository of NGC",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsup ./source",
    "watch": "tsup ./source --watch",
    "clean": "rm -rf dist docs",
    "docs": "typedoc",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "exports": {
    "./utils": "./source/utils.js",
    "./deepl": "./source/deepl.js",
    "./cli": "./source/cli.js"
  },
  "files": [
    "source"
  ],
  "repository": "git@github.com:incubateur-ademe/nsogstesclimat-scripts.git",
  "bugs": "https://github.com/incubateur-ademe/nsogstesclimat-scripts/issues",
  "keywords": [
    "optimization",
    "publicodes",
    "tooling",
    "scripting",
    "constant folding"
  ],
  "author": "<emile.rolley@tuta.io>",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^18.11.18",
    "ansi-colors": "^4.1.3",
    "deepl-node": "^1.20.0",
    "dotenv": "^16.3.1",
    "isomorphic-fetch": "^3.0.0",
    "prompt-sync": "^4.2.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "docdash": "^2.0.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.5.0",
    "typedoc": "^0.24.8",
    "typedoc-plugin-export-functions": "^1.0.0",
    "typescript": "^4.9.4",
    "yaml": "^2.3.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": "^22"
  }
}
