{
  "name": "api-engagement",
  "version": "1.0.0",
  "scripts": {
    "lint": "npm run lint:api && npm run lint:analytics && npm run lint:widget",
    "lint:fix": "npm run lint:fix:api && npm run lint:fix:widget",
    "lint:api": "cd api && npm run lint",
    "lint:fix:api": "cd api && npm run lint:fix",
    "lint:analytics": "cd analytics && npm run lint",
    "lint:widget": "cd widget && npm run lint",
    "lint:fix:widget": "cd widget && npm run lint:fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml}\" --ignore-path .prettierignore",
    "commit": "cz",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@typescript-eslint/eslint-plugin": "8.42.0",
    "@typescript-eslint/parser": "8.42.0",
    "commitizen": "4.3.1",
    "cz-customizable": "7.5.1",
    "eslint": "9.34.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "husky": "9.1.7",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "prettier-plugin-tailwindcss": "0.6.11"
  }
}
