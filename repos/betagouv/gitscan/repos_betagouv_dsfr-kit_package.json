{
  "name": "dsfr-kit",
  "version": "0.1.0",
  "private": true,
  "description": "DSFR component library for multiple frameworks",
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": "22.21.1",
    "pnpm": ">=10.25.0"
  },
  "scripts": {
    "build": "moon run :build",
    "dev": "moon run :dev",
    "lint": "moon run :lint",
    "lint:biome": "moon run :lint-biome",
    "lint:ruff": "moon run :lint-ruff",
    "format": "moon run :format",
    "format:biome": "moon run :format-biome",
    "format:ruff": "moon run :format-ruff",
    "test": "moon run :test",
    "test:coverage": "moon run :test-coverage",
    "clean": "moon run :clean",
    "clean:hard": "moon run :clean && rm -rf node_modules .turbo .moon/cache && find apps packages libs -type d -name 'node_modules' -prune -exec rm -rf {} +",
    "setup": "pnpm install && uv sync && uv run pre-commit install",
    "verify": "pnpm list --depth 0 && uv tree",
    "storybook": "moon run :storybook"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8"
  },
  "dependencies": {
    "comment-parser": "^1.4.1",
    "node-html-parser": "^7.0.1"
  }
}
