{
  "name": "mon-devis-sans-oublis-frontend",
  "version": "1.1.0",
  "private": true,
  "packageManager": "pnpm@10.28.1",
  "pnpm": {
    "overrides": {
      "tar": ">=7.5.4"
    }
  },
  "scripts": {
    "_comment": "Do not update DSFR to 1.14.x or higher without checking icons that we added",
    "build": "next build",
    "ci": "pnpm install --frozen-lockfile && pnpm validate",
    "clean": "rm -rf .next",
    "dev": "next dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fresh": "rm -rf .next node_modules pnpm-lock.yaml && pnpm install",
    "lint": "next lint",
    "start": "next start",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "validate": "pnpm typecheck && pnpm lint && pnpm test"
  },
  "dependencies": {
    "@gouvfr/dsfr": "1.14.2",
    "@sentry/nextjs": "^10.27.0",
    "@socialgouv/matomo-next": "^1.10.0",
    "next": "^15.5.9",
    "pnpm": "^10.27.0",
    "react": "^19.0.1",
    "react-dom": "^19.0.1",
    "zod": "^3.25.20"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "eslint": "^9.21.0",
    "eslint-config-next": "^15.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.0.8",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": "24"
  }
}
