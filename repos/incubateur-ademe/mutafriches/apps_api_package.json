{
  "name": "api",
  "description": "API pour l'analyse de mutabilit√© des friches urbaines",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "build": "pnpm run build:nest && pnpm run build:ui",
    "build:nest": "nest build",
    "build:ui": "cd ../ui && pnpm run build",
    "start:prod": "NODE_ENV=production node dist/src/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "clean": "rm -rf dist coverage node_modules",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/src/main.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:verbose": "cross-env VERBOSE=true vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:mutability": "vitest run mutability-calculation",
    "test:mutability:verbose": "cross-env VERBOSE=true vitest run mutability-calculation",
    "test:ui": "vitest --ui",
    "test:e2e": "vitest run --config vitest.config.ts test/",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:bpe:filter": "ts-node -r tsconfig-paths/register src/scripts/filter-bpe.ts",
    "db:bpe:import": "ts-node -r tsconfig-paths/register src/scripts/import-bpe.ts",
    "db:transport-stops:import": "ts-node -r tsconfig-paths/register src/scripts/import-transport-stops.ts",
    "db:ademe-sites:import": "ts-node -r tsconfig-paths/register src/scripts/import-ademe-sites.ts"
  },
  "dependencies": {
    "@mutafriches/shared-types": "workspace:*",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.5.0",
    "@turf/centroid": "^7.1.0",
    "@turf/helpers": "^7.1.0",
    "@types/express-session": "^1.18.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.2",
    "express": "^5.1.0",
    "postgres": "^3.4.7",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.3",
    "@types/geojson": "^7946.0.16",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^11.0.0",
    "@vitest/ui": "^4.0.8",
    "cross-env": "^10.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "unplugin-swc": "^1.5.5",
    "vitest": "^4.0.14"
  }
}
